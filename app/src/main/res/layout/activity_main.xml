<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#e1e2e1"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/firstCardView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_text_input"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/enteramount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/entervalue" />
        </android.support.design.widget.TextInputLayout>



        <!--<EditText-->
            <!--android:layout_marginTop="60dp"-->
            <!--android:hint="@string/entervalue"-->
            <!--android:gravity="center"-->
            <!--android:id="@+id/enteramount"-->
            <!--android:layout_width="200dp"-->
            <!--android:layout_marginLeft="90dp"-->
            <!--android:layout_height="wrap_content" />-->


        <LinearLayout

            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/vatedittext"
                android:layout_marginLeft="80dp"
                android:hint="@string/vat"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/aitedittext"
                android:hint="@string/ait"
                android:layout_marginLeft="70dp"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/secondCardView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginLeft="50dp"
                android:id="@+id/resultbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resultButton"
                android:textColor="#ffff"
                android:theme="@style/resultButton"/>

            <Button
                android:id="@+id/refreshbutton"
                android:layout_marginLeft="85dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refresh"
                android:textColor="#ffff"
                android:theme="@style/refreshButton"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/thirdCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:padding="10dp"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:paddingTop="13dp"
                android:id="@+id/vat"
                android:layout_marginTop="3dp"
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:text="@string/vat" />

            <TextView
                android:paddingTop="13dp"
                android:layout_marginTop="15dp"
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:id="@+id/aftervat"
                android:text="@string/afterVat" />

            <TextView
                android:paddingTop="13dp"
                android:id="@+id/ait"
                android:layout_marginTop="15dp"
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:text="@string/ait" />

            <TextView
                android:paddingTop="13dp"
                android:id="@+id/afterait"
                android:layout_marginTop="15dp"
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:text="@string/afterait" />

            <TextView
                android:paddingTop="13dp"
                android:id="@+id/netincome"
                android:layout_marginTop="15dp"
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:text="@string/netincome" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

